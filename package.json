{
  "name": "rmk-build",
  "private": true,
  "license": "ISC",
  "version": "2.4.0",
  "main": "dist/rmk.js",
  "scripts": {
    "prepublish": "yarn build",
    "build": "yarn lerna",
    "lerna": "lerna clean --yes && lerna bootstrap",
    "test": "jest",
    "test-dev": "jest --coverage --watch",
    "pref": "yarn run build && NODE_ENV=test babel-node ./tasks/bestResults.js",
    "precommit": "yarn cross-dep && lint-staged",
    "format": "prettier --single-quote --write 'packages/**/*.js'",
    "cross-dep": "babel-node ./tasks/get-cross-dependencies.js",
    "check-all": "babel-node ./tasks/npm-check-all.js",
    "doc": "jsdoc2md packages/rmk/src/actions/*.js packages/rmk/src/actions/**/*.js > docs/ACTIONS.md"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-strict-mode": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "chalk": "^1.1.3",
    "cross-spawn": "^5.1.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jest-babel": "^1.0.1",
    "jsdoc": "^3.4.3",
    "jsdoc-to-markdown": "^3.0.0",
    "lerna": "2.0.0-beta.37",
    "lint-staged": "^3.4.2",
    "prettier": "^0.22.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify": "^0.1.5",
    "uglify-es": "^3.0.18",
    "yargs": "^7.0.2"
  },
  "dependencies": {}
}
